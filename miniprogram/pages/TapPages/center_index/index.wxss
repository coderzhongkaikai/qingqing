/**index.wxss**/
.type_dance{
  padding: 30rpx 22rpx 0rpx;
  display: flex;
  /* color: #999; */
}
.nav_title{
  width: 150rpx;
  text-align: center;
  font-size: 36rpx;
  color: #444444;
  font-weight: 400;
}
.scroll-view-x{
  /* width: 600rpx; */
  padding-right:30rpx;
}
.nav_box {
  display: flex;
  width: 100%;
  flex-wrap: nowrap;
  justify-content: space-around;
}
.activate{
  color: #df7a41;
  border-bottom: 4rpx solid #df7a41;
}
.nav_item{
  word-break: keep-all;
  margin-right: 10rpx;
  padding:0 10rpx 5rpx; 
}
.title {
  font-family: PingFang SC;
  font-weight: 500;
  color: #000000;
  font-size: 44rpx;
  margin-bottom: 40rpx;
}

.top_tip {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #888888;
  margin-bottom: 28rpx;
}

.power {
  margin-top: 30rpx;
  border-radius: 5px;
  background-color: white;
  width: 93%;
  padding-bottom: 1rpx;
}

.power_info {
  display: flex;
  padding: 30rpx 25rpx;
  align-items: center;
  justify-content: space-between;
}

.power_info_more {
  width: 30rpx;
  height: 30rpx;
  transform: rotate(90deg);
}

.power_info_less {
  width: 30rpx;
  height: 30rpx;
  transform: rotate(270deg);
}

.power_info_text {
  display: flex;
  flex-direction: column;
}

.power_info_text_title {
  margin-bottom: 10rpx;
  font-weight: 400;
  font-size: 35rpx;
}

.power_info_text_tip {
  color: rgba(0, 0, 0, 0.4);
  font-size: 25rpx;
}

.power_item {
  padding: 30rpx 25rpx;
  display: flex;
  justify-content: space-between;
}

.power_item_title {
  font-size: 30rpx;
}

.power_item_icon {
  width: 30rpx;
  height: 30rpx;
}

.line {
  width: 95%;
  margin: 0 auto;
  height: 2rpx;
  background-color: rgba(0, 0, 0, 0.1);
}

.environment {
  color: rgba(0, 0, 0, 0.4);
  font-size: 24rpx;
  margin-top: 25%;
}
._card{
  width: 640rpx;
  min-height: 220rpx;
  padding: 20rpx;
  background: #ffffff;
  border-radius: 20rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.1);
  margin: 20rpx auto;
}
.scroll_box {
  display: flex;
  white-space: nowrap;
}
._card_title,.dance_info_card_title{
  color: #000000;
}
.scroll_item{
  margin-left: 20rpx;
}
.teacher_name{
  font-size: 22rpx;
}
._p{
  display: flex;
  font-size: 26rpx;
  margin: 10rpx 0;
  justify-content: space-between;
}
._p_box{
  display: flex;
    width: 100%;
}
._p_box .r{
  flex:1
}
._time{
  color: #df7a41;
}
._title{
  font-weight: 800;
  margin: 10rpx auto;
}
.l{
  margin-right: 20rpx;
  /* height: 200rpx; */
}
.btn{
  text-align: right;
  margin-right: 20rpx;
}